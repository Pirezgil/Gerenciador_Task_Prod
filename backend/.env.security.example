# Configurações de Segurança - OBRIGATÓRIAS EM PRODUÇÃO

# JWT Secret - GERAR UM SECRET FORTE EM PRODUÇÃO
# Use: openssl rand -base64 32
JWT_SECRET=your-super-secure-secret-key-min-32-chars-abcdef1234567890
JWT_EXPIRES_IN=7d

# Rate Limiting Configuration
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_BLOCK_DURATION_MS=3600000

# Bcrypt Rounds (mínimo 12 para produção)
BCRYPT_ROUNDS=12

# CORS Configuration
FRONTEND_URL=https://seudominio.com
COOKIE_DOMAIN=.seudominio.com

# Database Security
DATABASE_URL="postgresql://username:password@localhost:5432/database?sslmode=require"

# Logging
LOG_LEVEL=warn
EXTERNAL_LOG_SERVICE_URL=https://logs.seuservico.com
SECURITY_LOG_SERVICE_URL=https://security-logs.seuservico.com

# HTTPS Only in Production
NODE_ENV=production