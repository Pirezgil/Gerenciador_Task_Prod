# ====================================================================
# VARIÁVEIS DE AMBIENTE - PRODUÇÃO
# ====================================================================

# Domínio e URL
DOMAIN_NAME=gerenciador.seudominio.com
FRONTEND_URL=https://gerenciador.seudominio.com
API_URL=https://gerenciador.seudominio.com/api

# Base de dados PostgreSQL
POSTGRES_PASSWORD=senha_super_segura_postgres_123!@#
DATABASE_URL=postgresql://gerenciador_user:senha_super_segura_postgres_123!@#@postgres:5432/gerenciador_task

# JWT e Autenticação
JWT_SECRET=chave_jwt_super_segura_min_32_chars_1234567890!@#$%^&*()
JWT_EXPIRES_IN=7d

# Push Notifications (VAPID)
VAPID_PUBLIC_KEY=sua_chave_publica_vapid_aqui
VAPID_PRIVATE_KEY=sua_chave_privada_vapid_aqui
VAPID_EMAIL=admin@gerenciador.seudominio.com

# Email (para notificações)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_de_app

# Ambiente
NODE_ENV=production
PORT=3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Segurança
CORS_ORIGIN=https://gerenciador.seudominio.com
ALLOWED_ORIGINS=https://gerenciador.seudominio.com,https://www.gerenciador.seudominio.com

# Uploads
MAX_FILE_SIZE=50MB
UPLOAD_DIR=/app/uploads

# Logs
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# Health Check
HEALTH_CHECK_TOKEN=token_health_check_secreto_123

# Backup
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=gerenciador-backups
AWS_ACCESS_KEY_ID=sua_access_key
AWS_SECRET_ACCESS_KEY=sua_secret_key
AWS_REGION=us-east-1

# Monitoramento
SENTRY_DSN=https://sua_sentry_dsn@sentry.io/projeto
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Cache Redis (opcional)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=senha_redis_segura

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem